@page "/access_denied"
@inject NavigationManager NavManager

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-16">
    <MudCard Elevation="25">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5" Align="Align.Center">Access Prohibited</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <div class="d-flex justify-center mb-4">
                <MudIcon Icon="@Icons.Material.Filled.GppBad" Color="Color.Error" Size="Size.Large"
                    Style="font-size: 100px;" />
            </div>

            <MudText Typo="Typo.h6" Align="Align.Center" GutterBottom="true">
                You do not have the necessary permissions to view this page.
            </MudText>
            <MudText Align="Align.Center">
                This may be because you are not logged in, or your account does not have the required role.
            </MudText>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-center pa-4">
            <MudButton OnClick="GoToHome" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large">
                Go to Homepage
            </MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>


@code {
    private void GoToHome()
    {
        NavManager.NavigateTo("/");
    }
}